<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intcockpit</object-name>
    <object-name>inttourverriere</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Messerschmitt-P1101/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.893 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.276 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord  -->
  <model>
    <path>Aircraft/Messerschmitt-P1101/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.251 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.429 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>CanopyInterne</name>
    <object-name>inttourverriere</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>CanopyInterne</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep>   0 </dep></entry>
      <entry><ind> 1.00 </ind><dep> -95 </dep></entry>
    </interpolation>
    <axis>
      <x1-m> -2.772 </x1-m>
      <y1-m>  0.316 </y1-m>
      <z1-m>  0.554 </z1-m>
      <x2-m> -2.427 </x2-m>
      <y2-m>  0.338 </y2-m>
      <z2-m>  0.592 </z2-m>
    </axis>
  </animation>

</PropertyList>
